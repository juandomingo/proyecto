{% extends "base.html.twig" %}
{% block title %}{% endblock %}
{% block head %}Agregar Alimento{% endblock %}
{% block loginfo %}{% endblock %}
{% block content %}
<div class="agregar">
    <form action="" method="get" id="addPedido"  >
        <div class="form">
        <input type="hidden" name="action" id="action" size="20" value="addPedido"/>
            
            <div class="form-label"><label for="entidad_receptora">Entidad Receptora</label></div>
            <div class="form-input">
            <select>
            {% for item in entidades_receptoras %}
              <option value="{{ item.id }}">{{ item.razon_social }}</option>
            {% endfor %}
            </select>
            </div>
            
            <div class="form-label"><label for="descripcion">Hora de entrega</label></div>
            <div class="form-input">
              <input type="time" name="hora" id="hora" required />
            </div>
            <div class="clearer"><!-- --></div>

            <div class="form-label"><label for="descripcion">Fecha de entrega</label></div>
            <div class="form-input">
              <input type="date" name="dia" id="dia" required />
            </div>
            <div class="clearer"><!-- --></div>

            <div class="form-label"><label for="descripcion">Fecha de entrega</label></div>
            <div class="form-input">
              <select>

              <option value='0'>SÃ­</option>
              <option value='1'>No</option>
            </select>
            </div>
            <div class="clearer"><!-- --></div>


            <div class="form-label"><label for="entidad_receptora">Entidad Receptora</label></div>
            <div class="form-input">

            {% for item in detalles_alimentos %}
              {% if (item.getStockDisponible != 0) %}
                <input type="checkbox"
                 name="detalle_alimento_{{ item.id }}"
                 value="{{ item.id }}">
                 {{ item.getAlimento.descripcion }} por {{ item.getStockDisponible }} unidades
                 <br>
              {% endif %}
            {% endfor %}

            </div>
            <input type="submit" id="addbtn" value="Agregar" />


          </div>
       </form>
</div>

{% endblock %}
